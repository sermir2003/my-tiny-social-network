@startuml erd-main

skinparam linetype ortho

entity "Живой человек" as human {}

entity "Кредитка" as cred {
    id : serial
    --
    login : varchar(255), unique
    salt : char(32)
    salted_password_hash : text
}

entity "Данные" as data {
    id : integer, FK cred (id)
    --
    name : varchar(255)
    surname : varchar(255)
    birthdate : date
    email : varchar(255)
    phone : varchar(32)
}

human ||--o{ cred
cred ||--|| data

@enduml
